[Unit]
Description=Simple mysqldb-check service
After=network.target


[Service]
Type=simple
EnvironmentFile=-{{ mysqldb_check_home }}/config/mysqldb-check.conf
ExecStart={{ mysqldb_check_home }}/bin/mysqldb-check
ExecStop=/bin/kill -s QUIT $MAINPID
User={{ mysqldb_check_user }}
Group={{ mysqldb_check_group }}


[Install]
WantedBy=multi-user.target
